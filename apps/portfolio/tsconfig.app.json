{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": [
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "src/**/__tests__/*"
  ],
  "include": ["env.d.ts", "main.ts", "src/**/*.ts", "src/**/*.vue"]
}
